<%- include('../../fragment/header.ejs')%>

   <main>
    <h2>Clients list</h2>
    <table class="table-list">
        <thead>
            <tr>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        <%for (let c of clients) { %>
            <tr>
                <td><%= c.firstName %></td>
                <td><%= c.lastName %></td>
                <td><%= c.email %></td>
                <td>
                    <ul class="list-actions">
                        <li><a href="/clients/details/<%=c._id%>" class="list-actions-button-details">Details</a></li>
                        <li><a href="/clients/edit/<%=c._id%>" class="list-actions-button-edit">Edit</a></li>
                        <li><a href="/clients/delete/<%=c._id%>" class="list-actions-button-delete">Delete</a></li>
                    </ul>
                </td>
            </tr>
        <% } %>
        </tbody>
    </table>

    <p><a href="/clients/add" class="button-add">Add new client</a></p>
   </main>

<%- include('../../fragment/footer.ejs')%>