<%- include('../../fragment/header.ejs') %>

<main>
    <% if (formMode == 'showDetails' || formMode == 'edit') { %>
        <h2>
            Client Details
        </h2>
        <table class="table-list">
            <thead>
            <tr>
                <th>TripName</th>
                <th>DateFrom</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Pesel</th>
            </tr>
            </thead>
            <tbody>
            <% for (let c of clt.clients) { %>
                <tr>
                    <td><a href="/trips/details/<% c.trip.idTrip %>"><%= c.trip.name %></a></td>
                    <td><a href="/trips/details/<% c.trip.idTrip %>"><%= c.trip.dateFrom.toISOString().split('T')[0] %></a></td>
                    <td><%= c.firstName %></td>
                    <td><%= c.lastName %></td>
                    <td><%= c.email %></td>
                    <td><%= c.telephone %></td>
                    <td><%= c.pesel %></td>
                </tr>
            <% } %>
            </tbody>
        </table>
    <% } %>
</main>

<%- include('../../fragment/footer.ejs') %>